{
  "name": "sales-commission",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^1",
    "@sap-cloud-sdk/connectivity": "^3.26.1",
    "@sap-cloud-sdk/http-client": "^3.26.1",
    "@sap-cloud-sdk/resilience": "^3.26.1",
    "@sap-cloud-sdk/util": "^3.26.1",
    "@sap/cds": "^8.6.1",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.8.0",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8",
    "mbt": "^1.2.29"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-sales": "cds watch --open sales/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy sales-commission --delete-services --delete-service-keys --delete-service-brokers",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "watch-commissionconfig": "cds watch --open commissionconfig/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "sapux": [
    "app/sales",
    "app/commissionconfig"
  ],
  "cds": {
    "requires": {
      "[development]": {
        "db": {
          "kind": "sqlite"
        },
        "auth": {
          "kind": "mocked",
          "users": {
            "sales-rep@carfox.com": {
              "password": "admin",
              "roles": [
                "sales_representative"
              ]
            },
            "sales-manager@carfox.com": {
              "password": "admin",
              "roles": [
                "sales_manager",
                "sales_representative"
              ]
            },
            "finance-manager@carfox.com": {
              "password": "admin",
              "roles": [
                "sales_manager",
                "finance_manager"
              ]
            }
          }
        },
        "API_BUSINESS_PARTNER": {
          "kind": "odata-v2",
          "model": "srv/external/API_BUSINESS_PARTNER",
          "credentials": {
            "url": "<API URL>",
            "headers": {
              "APIKey": "<Your API Key>"
            }
          }
      }
      },
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      },
      "html5-repo": true,
      "destinations": true,
      "workzone": true,
      "API_BUSINESS_PARTNER": {
        "kind": "odata-v2",
        "model": "srv/external/API_BUSINESS_PARTNER",
        "credentials": {
            "url": "<API URL>",
            "headers": {
              "APIKey": "<Your API Key>"
            }
          }
      }
    },
    "sql": {
      "native_hana_associations": false
    }
  }
}